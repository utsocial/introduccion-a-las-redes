	<component id="ID_s4_title">
		<text>
			<![CDATA[<b>Cálculo de número de hosts</b>]]>
		</text>
	</component>
	<component id="ID_s4_txt01">
		<text>
			<![CDATA[Restan <font color="#f26200"><b>7</b></font> bits en el campo de host.]]>
		</text>
	</component>
	<component id="ID_s4_txt02">
		<text>
			<![CDATA[<textformat tabstops='[1]'>	2^<font color="#f26200"><b>7</b></font> = 128 hosts por subred<br>2^<font color="#f26200"><b>7</b></font> - 2 = 126 hosts válidos por subred</textformat>]]>
		</text>
